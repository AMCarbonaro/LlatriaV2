{
  "expo": {
    "name": "Llatria",
    "slug": "llatria-mobile",
    "version": "1.0.0",
    "scheme": "llatria",
    "orientation": "portrait",
    "userInterfaceStyle": "automatic",
    "splash": {
      "backgroundColor": "#ffffff"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.llatria.mobile"
    },
    "android": {
      "adaptiveIcon": {
        "backgroundColor": "#ffffff"
      },
      "package": "com.llatria.mobile",
      "permissions": [
        "CAMERA",
        "READ_EXTERNAL_STORAGE",
        "WRITE_EXTERNAL_STORAGE"
      ]
    },
    "web": {},
    "plugins": [
      [
        "expo-camera",
        {
          "cameraPermission": "Allow Llatria to access your camera to take photos of inventory items."
        }
      ],
      [
        "expo-image-picker",
        {
          "photosPermission": "Allow Llatria to access your photos to upload inventory images."
        }
      ]
    ]
  }
}

